{% comment %}
  视频提示列表组件
  Video Tips List Component
  
  用于展示两个视频提示卡片，匹配 Vue 组件中的 imageOrTextCommonList
{% endcomment %}

{%- liquid
  assign video_1_title = block.settings.video_1_title
  assign video_1_cover = block.settings.video_1_cover
  assign video_1_url = block.settings.video_1_url
  assign video_2_title = block.settings.video_2_title
  assign video_2_cover = block.settings.video_2_cover
  assign video_2_url = block.settings.video_2_url
-%}

<div class="durable-video-tips-list" {{ block.shopify_attributes }}>
  {% if video_1_title != blank and video_1_cover != blank and video_1_url != blank %}
  <div class="durable-video-tip-item">
    {% if video_1_title != blank %}
      <h2 class="durable-video-tip-title">{{ video_1_title }}</h2>
    {% endif %}
    <div class="durable-video-tip-image-wrapper" onclick="openVideoModal('durable-video-modal', '{{ video_1_url }}')">
      <img 
        src="{{ video_1_cover | image_url: width: 600 }}"
        alt="{{ video_1_title | escape }}"
        loading="lazy"
        class="durable-video-tip-image">
      <div class="durable-play-button">
        <svg width="68" height="68" viewBox="0 0 68 68" fill="none">
          <circle cx="34" cy="34" r="34" fill="white" opacity="0.9"/>
          <path d="M27 22L47 34L27 46V22Z" fill="#1d1e20"/>
        </svg>
      </div>
    </div>
  </div>
  {% endif %}
  
  {% if video_2_title != blank and video_2_cover != blank and video_2_url != blank %}
  <div class="durable-video-tip-item">
    {% if video_2_title != blank %}
      <h2 class="durable-video-tip-title">{{ video_2_title }}</h2>
    {% endif %}
    <div class="durable-video-tip-image-wrapper" onclick="openVideoModal('durable-video-modal', '{{ video_2_url }}')">
      <img 
        src="{{ video_2_cover | image_url: width: 600 }}"
        alt="{{ video_2_title | escape }}"
        loading="lazy"
        class="durable-video-tip-image">
      <div class="durable-play-button">
        <svg width="68" height="68" viewBox="0 0 68 68" fill="none">
          <circle cx="34" cy="34" r="34" fill="white" opacity="0.9"/>
          <path d="M27 22L47 34L27 46V22Z" fill="#1d1e20"/>
        </svg>
      </div>
    </div>
  </div>
  {% endif %}
</div>

<style>
.durable-video-tips-list {
  display: flex;
  gap: 2rem;
  margin: 4rem 0;
  flex-wrap: wrap;
}

.durable-video-tip-item {
  flex: 1;
  min-width: 280px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.durable-video-tip-title {
  font-size: 1.5rem;
  font-weight: bold;
  color: #1d1e20;
  margin: 0 0 1rem 0;
  text-align: center;
  line-height: 1.4;
}

.durable-video-tip-image-wrapper {
  position: relative;
  cursor: pointer;
  border-radius: 0.9375rem;
  overflow: hidden;
  width: 100%;
  /* max-width: 578px; */
}

.durable-video-tip-image {
  width: 100%;
  height: auto;
  display: block;
  transition: transform 0.3s ease;
}

.durable-video-tip-image-wrapper:hover .durable-video-tip-image {
  transform: scale(1.05);
}

.durable-play-button {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  transition: transform 0.3s ease;
  z-index: 10;
  pointer-events: none;
}

.durable-video-tip-image-wrapper:hover .durable-play-button {
  transform: translate(-50%, -50%) scale(1.1);
}

@media screen and (max-width: 767px) {
  .durable-video-tips-list {
    flex-direction: column;
    gap: 1.5rem;
    margin: 2rem 0;
  }
  
  .durable-video-tip-item {
    min-width: 100%;
  }
  
  .durable-video-tip-title {
    font-size: 1.25rem;
  }
}
</style>

