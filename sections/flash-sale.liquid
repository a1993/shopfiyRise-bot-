{% comment %}
  Flash Sale Section
  闪购活动页面 - 带 Tab 切换的产品展示
{% endcomment %}

{{ 'flash-sale.css' | asset_url | stylesheet_tag }}
<script src="{{ 'flash-sale.js' | asset_url }}" defer></script>

{%- liquid
  assign banner_desktop = section.settings.banner_desktop
  assign banner_mobile = section.settings.banner_mobile
-%}

<!-- Banner -->
{% render 'campaign-banner',
  banner_desktop: banner_desktop,
  banner_mobile: banner_mobile,
  banner_alt: section.settings.banner_alt,
  sticky: true
%}

<!-- Product Tabs Container -->
<div class="flash-sale-container lv-container">
  
  <!-- Tab Buttons -->
  <div class="flash-sale-tabs-nav">
    {% for block in section.blocks %}
      {% if block.type == 'product_tab' %}
        <button 
          type="button"
          class="flash-sale-tab-btn{% if forloop.first %} active{% endif %}"
          data-tab-id="{{ block.id }}"
          {{ block.shopify_attributes }}>
          {{ block.settings.tab_title }}
        </button>
      {% endif %}
    {% endfor %}
  </div>
  
  <!-- Tab Content -->
  <div class="flash-sale-tabs-content">
    {% for block in section.blocks %}
      {% if block.type == 'product_tab' %}
        <div 
          class="flash-sale-tab-pane{% if forloop.first %} active{% endif %}"
          data-tab-content="{{ block.id }}"
          {{ block.shopify_attributes }}>
          
          <!-- Product Grid -->
          <div class="flash-sale-products">
            {% comment %} 遍历该分类下的所有产品块 {% endcomment %}
            {% for product_block in section.blocks %}
              {% if product_block.type == 'product_item' and product_block.settings.parent_tab == block.id %}
                {% assign product = product_block.settings.product %}
                
                {% if product %}
                  <a href="{{ product.url }}" class="flash-sale-product-card" {{ product_block.shopify_attributes }}>
                    <!-- Product Image -->
                    {% if product.featured_image %}
                      <img 
                        src="{{ product.featured_image | image_url: width: 400 }}"
                        alt="{{ product.title | escape }}"
                        loading="lazy"
                        width="400"
                        height="400"
                        class="flash-sale-product-image">
                    {% endif %}
                    
                    <!-- Product Info -->
                    <div class="flash-sale-product-info">
                      <h3 class="flash-sale-product-title">{{ product.title }}</h3>
                      
                      <!-- Price -->
                      <div class="flash-sale-product-price">
                        {% if product.compare_at_price > product.price %}
                          <span class="flash-sale-price-sale">${{ product.price | money_without_currency }}</span>
                          <span class="flash-sale-price-compare">${{ product.compare_at_price | money_without_currency }}</span>
                        {% else %}
                          <span class="flash-sale-price-sale">${{ product.price | money_without_currency }}</span>
                        {% endif %}
                      </div>
                      
                      <!-- Reviews (Optional) -->
                      {% if section.settings.show_reviews and product.metafields.reviews.rating.value %}
                        <div class="flash-sale-reviews">
                          {{ product.metafields.reviews.rating_count.value }} Review(s)
                        </div>
                      {% endif %}
                    </div>
                    
                    <!-- Discount Badge -->
                    {% if block.settings.discount_percent > 0 %}
                      <div class="flash-sale-discount-badge">
                        <span>{{ block.settings.discount_percent }}%</span>
                        <span class="flash-sale-discount-off">OFF</span>
                      </div>
                    {% endif %}
                    
                    <!-- Hot Tag (if product has tag) -->
                    {% if product.tags contains 'HOT' or product.tags contains 'hot' %}
                      <div class="flash-sale-hot-tag">
                        <span>HOT</span>
                      </div>
                    {% endif %}
                  </a>
                {% endif %}
              {% endif %}
            {% endfor %}
          </div>
          
        </div>
      {% endif %}
    {% endfor %}
  </div>
  
</div>

{% schema %}
{
  "name": "Flash Sale",
  "tag": "section",
  "class": "flash-sale-section",
  "settings": [
    {
      "type": "header",
      "content": "Banner Settings"
    },
    {
      "type": "image_picker",
      "id": "banner_desktop",
      "label": "Desktop Banner"
    },
    {
      "type": "image_picker",
      "id": "banner_mobile",
      "label": "Mobile Banner"
    },
    {
      "type": "text",
      "id": "banner_alt",
      "label": "Banner Alt Text",
      "default": "Flash Sale"
    },
    {
      "type": "header",
      "content": "Display Settings"
    },
    {
      "type": "checkbox",
      "id": "show_reviews",
      "label": "Show Review Count",
      "default": false,
      "info": "Requires Shopify Product Reviews app"
    }
  ],
  "blocks": [
    {
      "type": "product_tab",
      "name": "Product Tab",
      "settings": [
        {
          "type": "text",
          "id": "tab_title",
          "label": "Tab Title",
          "default": "Product Category"
        },
        {
          "type": "number",
          "id": "discount_percent",
          "label": "Discount Percentage",
          "default": 15,
          "info": "Show on product card (e.g., 15 for 15% OFF)"
        }
      ]
    },
    {
      "type": "product_item",
      "name": "Product",
      "settings": [
        {
          "type": "text",
          "id": "parent_tab",
          "label": "Parent Tab ID",
          "info": "Enter the tab block ID (e.g., product_tab_1)"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Select Product"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Flash Sale"
    }
  ]
}
{% endschema %}
