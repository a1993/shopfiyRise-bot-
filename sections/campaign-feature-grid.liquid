        { "value": "video", "label": "🎥 视频" }
      ],
      "default": "image",
      "info": "选择显示图片还是视频"
    },
    {
      "type": "image_picker",
      "id": "feature_image",
      "label": "特性图片",
      "info": "当媒体类型为「图片」时显示"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "图片描述",
      "default": "Feature Image",
      "info": "用于SEO和无障碍访问"
    },
    {
      "type": "image_picker",
      "id": "video_cover",
      "label": "视频封面图",
      "info": "当媒体类型为「视频」时显示"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "视频 URL",
      "info": "YouTube 或 Vimeo 嵌入链接"
    },
    {
      "type": "text",
      "id": "video_alt",
      "label": "视频描述",
      "default": "Product Video"
    },
    {
      "type": "header",
      "content": "✍️ 文本内容设置"
    },
    {
      "type": "checkbox",
      "id": "use_custom_html",
      "label": "🔧 使用自定义HTML",
