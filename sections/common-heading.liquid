{% comment %}
  通用标题分区
  Common Heading Section
  
  可在主题编辑器中直接添加和配置的标题组件
{% endcomment %}

<div class="common-heading-section common-heading-section--align-{{ section.settings.align }} common-heading-section--spacing-top-{{ section.settings.spacing_top }} common-heading-section--spacing-bottom-{{ section.settings.spacing_bottom }}"{% if section.settings.background_color != blank %} style="background-color: {{ section.settings.background_color }};"{% endif %}>
  <div class="common-container common-container--width-{{ section.settings.container_width }} common-container--padding-{{ section.settings.container_padding }}">
    {% if section.settings.title != blank or section.settings.subtitle != blank %}
      <div class="common-heading-wrapper">
        {% if section.settings.title != blank %}
          <{{ section.settings.title_tag }} class="common-heading__title common-heading__title--{{ section.settings.title_size }}"{% if section.settings.title_color != blank %} style="color: {{ section.settings.title_color }};"{% endif %}>
            {{ section.settings.title }}
          </{{ section.settings.title_tag }}>
        {% endif %}
        
        {% if section.settings.subtitle != blank %}
          <{{ section.settings.subtitle_tag }} class="common-heading__subtitle common-heading__subtitle--{{ section.settings.subtitle_size }}"{% if section.settings.subtitle_color != blank %} style="color: {{ section.settings.subtitle_color }};"{% endif %}>
            {{ section.settings.subtitle }}
          </{{ section.settings.subtitle_tag }}>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

<style>
  /* Common Container Styles */
  .common-container {
    width: 100%;
    margin-left: auto;
    margin-right: auto;
  }
  
  .common-container--width-standard { max-width: 85.5rem; }
  .common-container--width-wide { max-width: 100rem; }
  .common-container--width-narrow { max-width: 64rem; }
  .common-container--width-full { max-width: 100%; }
  
  .common-container--padding-none { padding-left: 0; padding-right: 0; }
  .common-container--padding-small { padding-left: 1rem; padding-right: 1rem; }
  .common-container--padding-medium { padding-left: 1.25rem; padding-right: 1.25rem; }
  .common-container--padding-large { padding-left: 2rem; padding-right: 2rem; }
  
  /* Common Heading Section */
  .common-heading-section {
    width: 100%;
  }
  
  .common-heading-wrapper {
    width: 100%;
  }
  
  /* Text Alignment */
  .common-heading-section--align-left .common-heading-wrapper {
    text-align: left;
  }
  
  .common-heading-section--align-center .common-heading-wrapper {
    text-align: center;
  }
  
  .common-heading-section--align-right .common-heading-wrapper {
    text-align: right;
  }
  
  /* Title Styles */
  .common-heading__title {
    margin: 0;
    color: #1d1e20;
    line-height: 1.2;
    font-weight: 700;
  }
  
  /* Title Size Variants */
  .common-heading__title--small {
    font-size: 1.25rem; /* 20px */
  }
  
  .common-heading__title--medium {
    font-size: 1.875rem; /* 30px */
  }
  
  .common-heading__title--large {
    font-size: 2.25rem; /* 36px */
  }
  
  .common-heading__title--xlarge {
    font-size: 3rem; /* 48px */
  }
  
  /* Subtitle Styles */
  .common-heading__subtitle {
    margin: 0.5rem 0 0 0;
    color: #666;
    line-height: 1.5;
    font-weight: 400;
  }
  
  /* Subtitle Size Variants */
  .common-heading__subtitle--small {
    font-size: 0.875rem; /* 14px */
  }
  
  .common-heading__subtitle--medium {
    font-size: 1rem; /* 16px */
  }
  
  .common-heading__subtitle--large {
    font-size: 1.25rem; /* 20px */
  }
  
  /* Spacing Top */
  .common-heading-section--spacing-top-none {
    padding-top: 0;
  }
  
  .common-heading-section--spacing-top-small {
    padding-top: 1rem;
  }
  
  .common-heading-section--spacing-top-medium {
    padding-top: 2rem;
  }
  
  .common-heading-section--spacing-top-large {
    padding-top: 4rem;
  }
  
  /* Spacing Bottom */
  .common-heading-section--spacing-bottom-none {
    padding-bottom: 0;
  }
  
  .common-heading-section--spacing-bottom-small {
    padding-bottom: 1rem;
  }
  
  .common-heading-section--spacing-bottom-medium {
    padding-bottom: 2rem;
  }
  
  .common-heading-section--spacing-bottom-large {
    padding-bottom: 4rem;
  }
  
  /* Desktop Responsive (>=1280px) */
  @media screen and (min-width: 1280px) {
    .common-heading__title--small {
      font-size: 1.5rem; /* 24px */
    }
    
    .common-heading__title--medium {
      font-size: 2.25rem; /* 36px */
    }
    
    .common-heading__title--large {
      font-size: 3rem; /* 48px */
    }
    
    .common-heading__title--xlarge {
      font-size: 3.75rem; /* 60px */
    }
    
    .common-heading__subtitle--small {
      font-size: 1rem; /* 16px */
    }
    
    .common-heading__subtitle--medium {
      font-size: 1.125rem; /* 18px */
    }
    
    .common-heading__subtitle--large {
      font-size: 1.5rem; /* 24px */
    }
    
    .common-heading-section--spacing-top-large {
      padding-top: 6rem;
    }
    
    .common-heading-section--spacing-bottom-large {
      padding-bottom: 6rem;
    }
  }
  
  /* Mobile Responsive (<=767px) */
  @media screen and (max-width: 767px) {
    .common-heading__title--small {
      font-size: 1.125rem; /* 18px */
    }
    
    .common-heading__title--medium {
      font-size: 1.5rem; /* 24px */
    }
    
    .common-heading__title--large {
      font-size: 1.875rem; /* 30px */
    }
    
    .common-heading__title--xlarge {
      font-size: 2.25rem; /* 36px */
    }
    
    .common-heading__subtitle--small {
      font-size: 0.75rem; /* 12px */
    }
    
    .common-heading__subtitle--medium {
      font-size: 0.875rem; /* 14px */
    }
    
    .common-heading__subtitle--large {
      font-size: 1rem; /* 16px */
    }
    
    .common-heading-section--spacing-top-medium {
      padding-top: 1.5rem;
    }
    
    .common-heading-section--spacing-top-large {
      padding-top: 2.5rem;
    }
    
    .common-heading-section--spacing-bottom-medium {
      padding-bottom: 1.5rem;
    }
    
    .common-heading-section--spacing-bottom-large {
      padding-bottom: 2.5rem;
    }
  }
</style>

{% schema %}
{
  "name": "标题 Heading",
  "tag": "section",
  "class": "section-common-heading",
  "settings": [
    {
      "type": "header",
      "content": "标题内容"
    },
    {
      "type": "text",
      "id": "title",
      "label": "主标题",
      "default": "Section Title"
    },
    {
      "type": "select",
      "id": "title_tag",
      "label": "主标题 HTML 标签",
      "options": [
        { "value": "h1", "label": "H1" },
        { "value": "h2", "label": "H2" },
        { "value": "h3", "label": "H3" },
        { "value": "h4", "label": "H4" },
        { "value": "h5", "label": "H5" },
        { "value": "h6", "label": "H6" }
      ],
      "default": "h2"
    },
    {
      "type": "select",
      "id": "title_size",
      "label": "主标题大小",
      "options": [
        { "value": "small", "label": "小" },
        { "value": "medium", "label": "中" },
        { "value": "large", "label": "大" },
        { "value": "xlarge", "label": "超大" }
      ],
      "default": "medium"
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "主标题颜色"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "副标题"
    },
    {
      "type": "select",
      "id": "subtitle_tag",
      "label": "副标题 HTML 标签",
      "options": [
        { "value": "p", "label": "P" },
        { "value": "span", "label": "Span" },
        { "value": "h3", "label": "H3" },
        { "value": "h4", "label": "H4" },
        { "value": "h5", "label": "H5" },
        { "value": "h6", "label": "H6" }
      ],
      "default": "p"
    },
    {
      "type": "select",
      "id": "subtitle_size",
      "label": "副标题大小",
      "options": [
        { "value": "small", "label": "小" },
        { "value": "medium", "label": "中" },
        { "value": "large", "label": "大" }
      ],
      "default": "medium"
    },
    {
      "type": "color",
      "id": "subtitle_color",
      "label": "副标题颜色"
    },
    {
      "type": "header",
      "content": "布局设置"
    },
    {
      "type": "select",
      "id": "align",
      "label": "文本对齐",
      "options": [
        { "value": "left", "label": "左对齐" },
        { "value": "center", "label": "居中" },
        { "value": "right", "label": "右对齐" }
      ],
      "default": "center"
    },
    {
      "type": "select",
      "id": "container_width",
      "label": "容器宽度",
      "options": [
        { "value": "standard", "label": "标准 (1368px)" },
        { "value": "wide", "label": "宽屏 (1600px)" },
        { "value": "narrow", "label": "窄屏 (1024px)" },
        { "value": "full", "label": "全宽" }
      ],
      "default": "standard"
    },
    {
      "type": "select",
      "id": "container_padding",
      "label": "容器内边距",
      "options": [
        { "value": "none", "label": "无" },
        { "value": "small", "label": "小" },
        { "value": "medium", "label": "中" },
        { "value": "large", "label": "大" }
      ],
      "default": "medium"
    },
    {
      "type": "select",
      "id": "spacing_top",
      "label": "上间距",
      "options": [
        { "value": "none", "label": "无" },
        { "value": "small", "label": "小" },
        { "value": "medium", "label": "中" },
        { "value": "large", "label": "大" }
      ],
      "default": "medium"
    },
    {
      "type": "select",
      "id": "spacing_bottom",
      "label": "下间距",
      "options": [
        { "value": "none", "label": "无" },
        { "value": "small", "label": "小" },
        { "value": "medium", "label": "中" },
        { "value": "large", "label": "大" }
      ],
      "default": "medium"
    },
    {
      "type": "color_background",
      "id": "background_color",
      "label": "背景颜色"
    }
  ],
  "presets": [
    {
      "name": "标题 Heading"
    }
  ]
}
{% endschema %}

