{% comment %}
  Hair System Training Section
  用于展示发型系统培训页面
  
  包含：
  - Hero 区域（标题和描述）
  - 培训师信息卡片（可添加多个）
  - 图片轮播
{% endcomment %}

{%- liquid
  assign hero_title = section.settings.hero_title
  assign hero_subtitle = section.settings.hero_subtitle
  assign hero_description = section.settings.hero_description
  assign hero_bg_image = section.settings.hero_bg_image
  assign hero_bg_image_mobile = section.settings.hero_bg_image_mobile
-%}

{{ 'hair-system-training.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: calc({{ section.settings.padding_top }}px * 0.75);
    padding-bottom: calc({{ section.settings.padding_bottom }}px * 0.75);
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  
  {% if hero_bg_image %}
    #SalonShow-{{ section.id }} {
      background-image: url('{{ hero_bg_image | image_url: width: 1920 }}');
    }
  {% endif %}
  
  {% if hero_bg_image_mobile %}
    @media all and (max-width: 767px) {
      #SalonShow-{{ section.id }} {
        background-image: url('{{ hero_bg_image_mobile | image_url: width: 768 }}');
      }
    }
  {% endif %}
{%- endstyle -%}

<div class="hair-system-training-section section-{{ section.id }}-padding" {{ section.shopify_attributes }}>
  <!-- Hero Section -->
  <div id="SalonShow-{{ section.id }}" class="salon-show">
    <div class="b-w1170">
      <div class="salonshow-ttl">
        {% if hero_subtitle != blank %}
          <span>{{ hero_subtitle }}</span>
        {% endif %}
        {% if hero_title != blank %}
          <h2>{{ hero_title }}</h2>
        {% endif %}
      </div>
      {% if hero_description != blank %}
        <p>{{ hero_description }}</p>
      {% endif %}
    </div>
  </div>

  <div class="b-w1170">
    <!-- Trainers Section -->
    {% for block in section.blocks %}
      {% case block.type %}
        {% when 'trainer' %}
          <div class="hairdresser" {{ block.shopify_attributes }}>
            <div class="sub-box">
              <div class="hairdresser-pic">
                <span class="hairdresser-name">{{ block.settings.trainer_name }}</span>
                {% if block.settings.trainer_image != blank %}
                  <img 
                    src="{{ block.settings.trainer_image | image_url: width: 450 }}"
                    alt="{{ block.settings.trainer_name | escape }}"
                    width="450"
                    height="478"
                    loading="lazy">
                {% endif %}
              </div>

              <div class="hairdresser-info">
                <dl>
                  {% if block.settings.trainer_title != blank %}
                    <dt>{{ block.settings.trainer_title }}</dt>
                  {% endif %}
                  
                  {% if block.settings.trainer_email != blank %}
                    <dd>
                      <span>Email:</span>
                      <p><a href="mailto:{{ block.settings.trainer_email }}">{{ block.settings.trainer_email }}</a></p>
                    </dd>
                  {% endif %}
                  
                  {% if block.settings.trainer_phone != blank %}
                    <dd>
                      <span>Phone:</span>
                      <p><a href="tel:{{ block.settings.trainer_phone }}">{{ block.settings.trainer_phone }}</a></p>
                    </dd>
                  {% endif %}
                  
                  {% if block.settings.trainer_instagram != blank %}
                    <dd>
                      <span>Instagram:</span>
                      <p>
                        <a class="youtua" href="{{ block.settings.trainer_instagram_url }}" target="_blank" rel="noopener">
                          {{ block.settings.trainer_instagram }}
                        </a>
                      </p>
                    </dd>
                  {% endif %}
                </dl>

                {% if block.settings.video_url != blank %}
                  <iframe 
                    width="560" 
                    height="315" 
                    src="{{ block.settings.video_url }}"
                    title="YouTube video player" 
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture;"
                    allowfullscreen>
                  </iframe>
                {% endif %}

                {% if block.settings.trainer_info_image != blank %}
                  <div class="hairdresser-info-pic">
                    <img 
                      src="{{ block.settings.trainer_info_image | image_url: width: 777 }}"
                      alt="{{ block.settings.trainer_name | escape }}"
                      width="777"
                      height="600"
                      loading="lazy">
                  </div>
                {% endif %}
              </div>
            </div>
            
            {% if block.settings.trainer_description != blank %}
              <p>{{ block.settings.trainer_description }}</p>
            {% endif %}
          </div>
          
      {% endcase %}
    {% endfor %}
  </div>
</div>

