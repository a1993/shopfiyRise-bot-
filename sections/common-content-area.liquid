        {
          "type": "text",
          "id": "image_width",
          "label": "图片最大宽度",
          "default": "100%",
          "info": "可使用 px, %, rem 等单位"
        }
      ]
    },
    {
      "type": "button",
      "name": "按钮",
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "按钮文字"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "按钮链接"
        },
        {
          "type": "select",
          "id": "button_style",
          "label": "按钮样式",
          "options": [
            { "value": "primary", "label": "主要按钮" },
            { "value": "secondary", "label": "次要按钮" },
