        }
      ]
    },
    {
      "type": "spacer",
      "name": "间距",
      "settings": [
        {
          "type": "range",
          "id": "height",
          "label": "间距高度",
          "min": 0,
          "max": 200,
          "step": 10,
          "default": 40,
          "unit": "px"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "内容区域 Content",
      "blocks": [
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}

