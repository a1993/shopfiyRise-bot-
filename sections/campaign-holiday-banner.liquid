{% comment %}
  Holiday Hair Vote - 横幅区块
  对应 Vue 页面的 Banner 组件
{% endcomment %}

<div class="holiday-banner" style="background-color: {{ section.settings.bg_color }};">
  {%- comment -%} 桌面端横幅 {%- endcomment -%}
  {%- if section.settings.desktop_image != blank -%}
    <div class="holiday-banner__desktop">
      {{
        section.settings.desktop_image
        | image_url: width: 1920
        | image_tag:
          loading: 'eager',
          width: section.settings.desktop_image.width,
          alt: section.settings.banner_alt,
          class: 'holiday-banner__image'
      }}
    </div>
  {%- endif -%}

  {%- comment -%} 移动端横幅 {%- endcomment -%}
  {%- if section.settings.mobile_image != blank -%}
    <div class="holiday-banner__mobile">
      {{
        section.settings.mobile_image
        | image_url: width: 750
        | image_tag:
          loading: 'eager',
          width: section.settings.mobile_image.width,
          alt: section.settings.banner_alt,
          class: 'holiday-banner__image'
      }}
    </div>
  {%- endif -%}
</div>

<style>
  .holiday-banner {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .holiday-banner__image {
    width: 100%;
    height: auto;
    display: block;
  }

  .holiday-banner__desktop {
    display: block;
  }

  .holiday-banner__mobile {
    display: none;
  }

  @media screen and (max-width: 749px) {
    .holiday-banner__desktop {
      display: none;
    }

    .holiday-banner__mobile {
      display: block;
    }
  }
</style>

{% schema %}
{
  "name": "Holiday Hair Vote Banner",
  "tag": "section",
  "class": "section-holiday-banner",
  "settings": [
    {
      "type": "header",
      "content": "横幅图片设置"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "桌面端横幅",
      "info": "建议尺寸: 1920x600px"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "移动端横幅",
      "info": "建议尺寸: 750x600px"
    },
    {
      "type": "text",
      "id": "banner_alt",
      "label": "图片描述（SEO）",
      "default": "Holiday Hair Vote Campaign"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "背景颜色",
      "default": "#F0EADF"
    }
  ],
  "presets": [
    {
      "name": "Holiday Banner"
    }
  ]
}
{% endschema %}

