      "type": "url",
      "id": "js_url",
      "label": "JavaScript URL",
      "info": "Vue 应用的 JS 文件 URL (例如: https://your-cdn.com/assets/index.js)"
    },
    {
      "type": "url",
      "id": "css_url",
      "label": "CSS URL",
      "info": "Vue 应用的 CSS 文件 URL (例如: https://your-cdn.com/assets/index.css)"
    },
    {
      "type": "header",
      "content": "Loading Settings"
    },
    {
      "type": "checkbox",
      "id": "show_loading",
      "label": "Show Loading Animation",
      "default": true,
      "info": "显示加载动画直到 Vue 应用完全加载"
    },
    {
      "type": "text",
      "id": "loading_text",
      "label": "Loading Text",
      "default": "Loading Campaign...",
      "info": "加载时显示的文字"
    },
    {
      "type": "color",
      "id": "loading_color",
      "label": "Loading Spinner Color",
      "default": "#A28969"
    },
    {
      "type": "color",
      "id": "loading_text_color",
      "label": "Loading Text Color",
      "default": "#666666"
    },
    {
      "type": "range",
      "id": "timeout",
      "min": 5,
      "max": 30,
      "step": 1,
      "unit": "s",
      "label": "Loading Timeout",
      "default": 10,
      "info": "超时时间（秒）"
    },
    {
      "type": "text",
      "id": "error_text",
      "label": "Error Message",
      "default": "Failed to load campaign. Please refresh the page.",
      "info": "加载失败时显示的错误信息"
    }
  ],
  "presets": [
    {
      "name": "Campaign Vue Loader",
      "settings": {
        "campaign_id": "holiday-hair-vote-2024",
        "show_loading": true,
        "loading_text": "Loading Campaign...",
        "loading_color": "#A28969",
        "loading_text_color": "#666666",
        "timeout": 10,
        "error_text": "Failed to load campaign. Please refresh the page."
      }
    }
  ]
}
{% endschema %}

